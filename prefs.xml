<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkBox" id="prefs_widget">
    <property name="orientation">vertical</property>
    <property name="spacing">10</property>
    <child>
      <object class="GtkLabel" id="position_label">
        <property name="label">Position on Top Bar:</property>
        <property name="halign">start</property>
      </object>
    </child>
    <child>
      <object class="GtkComboBoxText" id="position_combobox">
        <items>
          <!-- Left Side Options -->
          <item id="far-left">Far Left</item>
          <item id="mid-left">Mid Left</item>
          <item id="rightmost-left">Rightmost Left</item>
          <!-- Center Options -->
          <item id="middle-left">Middle Left</item>
          <item id="center">Center</item>
          <item id="middle-right">Middle Right</item>
          <!-- Right Side Options -->
          <item id="leftmost-right">Leftmost Right</item>
          <item id="mid-right">Mid Right</item>
          <item id="far-right">Far Right</item>
        </items>
      </object>
    </child>
    <child>
     <object class="GtkComboBoxText" id="controls_position_combobox">
       <property name="tooltip-text">Position of Playback Controls</property>
	 <items>
	   <item id="left">Left</item>
	   <item id="right">Right</item>
	 </items>
     </object>
    </child>
  </object>
</interface>
